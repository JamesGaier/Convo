{
    "env": {
        "es2015": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "io": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "default-case": "warn",
        "no-empty-function": "error",
        "no-magic-numbers": "warn",
        "init-declarations": ["error", "always"],
        "no-shadow": "warn",
        "max-params": ["warn", 5],
        "prefer-const": "warn",
        "arrow-spacing": "warn",
        "no-confusing-arrow": "warn",
        "no-var": "error"
    }
}
